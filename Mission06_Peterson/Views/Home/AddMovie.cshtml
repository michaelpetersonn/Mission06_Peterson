@model Mission06_Peterson.Models.Movie

@{
    ViewBag.Title = "Add Movie";
    Layout = "_Layout";
}

<h2>Add a Movie to My Collection</h2>

<form asp-action="AddMovie" method="post">
    <div class="form-group">
        <label asp-for="MovieTitle">Movie Title:</label>
        <input asp-for="MovieTitle" class="form-control" />
        <span asp-validation-for="MovieTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Movie Category:</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MovieYear">Movie Year:</label>
        <input asp-for="MovieYear" type="number" class="form-control" />
        <span asp-validation-for="MovieYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MovieDirector">Movie Director:</label>
        <input asp-for="MovieDirector" class="form-control" />
        <span asp-validation-for="MovieDirector" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MovieRating">Movie Rating:</label>
        <select asp-for="MovieRating" class="form-control">
            <option value="">--Select Rating--</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
        <span asp-validation-for="MovieRating" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Edited" type="checkbox" class="form-check-input" />
        <label asp-for="Edited" class="form-check-label">Edited?</label>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LentTo">Who was this movie lent to?</label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes">Any notes you would like to provide?</label>
        <input asp-for="Notes" maxlength="25" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Movie</button>
</form>
