@model Mission06_Peterson.Models.Movie

@{
    ViewBag.Title = "Delete Movie";
    Layout = "_Layout";
}

<h2 class="mb-4 text-danger">Delete Movie</h2>

<!--Delete Message---->

<div class="card p-4 shadow-sm">
    <p>Are you sure you want to delete this movie?</p>

    <ul>
        <li><strong>Title:</strong> @Model.Title</li>
        <li><strong>Year:</strong> @Model.Year</li>
        <li><strong>Category:</strong> @Model.Category?.CategoryName</li>
    </ul>
<!---Send our message through most method to our controller----> 
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MovieId" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ShowMe" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>